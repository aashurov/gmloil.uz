<div class="last-arrivals__block">
    <div class="block-cart">
        <a href="{full-link}" class="block-cart__link-abs"></a>
        <div class="block-cart__data-top">
            <div class="block-cart__barcode">[xfgiven_akcija][xfvalue_akcija][/xfgiven_akcija]</div>
            <div class="block-cart__new">[xfgiven_novinka][xfvalue_novinka][/xfgiven_novinka]</div>
        </div>
        <div class="block-cart__img">
            <img src="{image-1}" alt="{title}" class="block-cart__image">
        </div>
        <div class="block-cart__data">
           [xfgiven_nalichie]<div class="s-nal"><span class="fa fa-check"></span><font color="029400В"><b>В наличии</b></font></div>[/xfgiven_nalichie]
           [xfnotgiven_nalichie]<div class="s-nal no-nal"><span class="fa fa-times"></span><font color="c90000"><b>Н̶е̶т̶ ̶в̶ ̶н̶а̶л̶и̶ч̶и̶и̶</b></font></div>[/xfnotgiven_nalichie]
            <div class="block-cart__article">[xfgiven_article][xfvalue_article][/xfgiven_article]
                <div class="block-cart__article-q">
                    <i class="ri-question-line"></i>
                    <div class="prompt">
                        <div class="prompt__wrapper">
                            <div class="prompt__text">
                                Артикул товара!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-cart__category">{category}</div>
        <div class="block-cart__title">{title}</div>
          <div class="block-cart__price-data">
            <div class="block-cart__price"></div>
            <div class="block-cart__add-to-cart"> 
             <div class="button"><a class="llink" href="https://t.me/gmloil" style="color:white;"><i class="ri-shopping-cart-2-line">  </i></a></div>
            </div>
        </div>
    </div>
</div>