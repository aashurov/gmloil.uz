<div class="swiper-slide popular__column">
    <div class="block-cart block-cart-s">
        <a href="{full-link}" class="block-cart__link-abs"></a>
        <div class="block-cart__data-top" style="display: none;">
            <div class="block-cart__barcode">В наличии</div>
            <div class="block-cart__new">Новинка</div>
        </div>
        <div class="block-cart__img">
            <img src="{image-1}" alt="" class="block-cart__image">
        </div>
        <div class="block-cart__data">
            [xfgiven_nalichie]<div class="s-nal"><span class="fa fa-check"></span>В наличии</div>[/xfgiven_nalichie]
            [xfnotgiven_nalichie]<div class="s-nal no-nal"><span class="fa fa-times"></span>Нет в наличии</div>[/xfnotgiven_nalichie]
            <div class="block-cart__article">[xfgiven_article][xfvalue_article][/xfgiven_article]
                <div class="block-cart__article-q">
                    <i class="ri-question-line"></i>
                    <div class="prompt">
                        <div class="prompt__wrapper">
                            <div class="prompt__text">
                                Артикул товара!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-cart__category">{category}</div>
        <div class="block-cart__title">{title}</div>
        <div class="block-cart__price-data" style="display: none;">
            <div class="block-cart__price">200 000.сум</div>
            <div class="block-cart__add-to-cart">
                <i class="ri-shopping-cart-2-line"></i>
            </div>
        </div>
    </div>
</div>