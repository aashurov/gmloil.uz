<article class="full-news">
    <div class="full-news__wrapper">
        <h1 class="full-news__title">{title} [group=1][edit] <i class="ri-edit-box-line"></i>[/edit][/group]</h1>
        <div class="full-news__image">
            <img src="{image-1}" alt="{title}" class="full-news__img">
        </div>
        <div class="full-news__description">
            {full-story}
        </div>
    </div>
    <div class="full-news__add-comments">
        {addcomments} {comments} {navigation}
    </div>
</article>