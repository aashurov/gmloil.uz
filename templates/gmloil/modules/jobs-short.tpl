<div class="jobs">
        <div class="jobs__wrapper">
            <a href="{full-link}" class="jobs__title-job">{title}  [group=1][edit] <i class="ri-edit-box-line"></i>[/edit][/group]</a>
            <div class="jobs__row">
                <div class="jobs__descr">
                  {short-story}
                </div>
                <div class="jobs__poll">
                    <a href="/vacancy/%D.doc" class="jobs__link">Скачать анкету</a>
                </div>
            </div>
            <div class="jobs__data">
                <div class="jobs__row">
                    <i class="ri-timer-2-line"></i>
                    <div class="jobs__data-now">{date=d F Y}</div>
                </div>
            </div>
            <div class="full-news__add-comments">
                {addcomments} {comments} {navigation}
            </div>
        </div>
    </div>